<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/buttonWriteIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="buttonWriteIn" />

    <Button
        android:id="@+id/buttonReadIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="buttonReadIn" />

    <Button
        android:id="@+id/buttonWriteExt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="buttonWriteExt" />

    <Button
        android:id="@+id/buttonReadExt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="buttonReadExt" />

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</LinearLayout>